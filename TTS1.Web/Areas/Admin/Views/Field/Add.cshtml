@model FieldAddDto

<div class="content-wrapper">

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Tarlalar /</span> Tarla Ekle</h4>

        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <form asp-controller="Field" asp-action="Add" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="card-body">

                            

                            <div class="form-group">
                                <label asp-for="Name" id="defaultFormControlInput" class="form-label">İsim</label>
                                <input asp-for="Name" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Tarlanın İsmini Giriniz"
                                       aria-describedby="defaultFormControlHelp" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Location" id="defaultFormControlInput" class="form-label">Lokasyonu</label>
                                <input asp-for="Location" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Tarlanın Lokasyonunu Giriniz"
                                       aria-describedby="defaultFormControlHelp" />
                                <span asp-validation-for="Location" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Size" id="defaultFormControlInput" class="form-label">Boyutu (Dönüm)</label>
                                <input asp-for="Size" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Tarlanın Boyutunu Giriniz"
                                       aria-describedby="defaultFormControlHelp" />
                                <span asp-validation-for="Size" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="SoilType" id="defaultFormControlInput" class="form-label">Toprak Türü</label>
                                <input asp-for="SoilType" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Tarlanın Toprak Türünü Giriniz"
                                       aria-describedby="defaultFormControlHelp" />
                                <span asp-validation-for="SoilType" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

</div>