@model List<ProductDto>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"></span>Ürün Yönetimi</h4>
    <div class="card">

        <div class="table-responsive text-nowrap m-3">
            <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Product" asp-action="Add">
                Ürün Ekle +
            </a>


            <table class="table table-bordered" id="fieldsTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <td>İsmi</td>
                        <td>Fiyatı</td>
                        <td>Birimi</td>
                        <th>Taşıma Adımları</th>
                        <th>İşlem Adımları</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                </tfoot>

                <tbody class="table-border-bottom-0">
                    @foreach (var product in Model)
                    {
                        <tr name="@product.Id">
                            <td>@product.Name</td>
                            <td>@product.Price</td>
                            <td>@product.Unit</td>
                            <td>
                                <a class="btn btn-warning btn-sm" data-id="@product.Id" asp-area="Admin" asp-controller="Transport" asp-action="IndexByProduct" asp-route-productId="@product.Id"><i class="menu-icon bx bxs-truck"></i>Taşıma Adımları</a>
                            </td>
                            <td>
                                <a class="btn btn-warning btn-sm" data-id="@product.Id" asp-area="Admin" asp-controller="Stage" asp-action="IndexByProduct" asp-route-productId="@product.Id"><i class="menu-icon bx bx-stats"></i>İşlem Adımları</a>
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" data-id="@product.Id" asp-area="Admin" asp-controller="Product" asp-action="Update" asp-route-productId="@product.Id"><i class="bx bxs-edit"></i></a>
                                <a class="btn btn-danger btn-sm" data-id="@product.Id" asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-productId="@product.Id"><i class="bx bx-minus-circle"></i></a>
                            </td>

                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/fieldIndex.js" type="application/ecmascript"></script>
}


