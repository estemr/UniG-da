@model ProductAddDto

<div class="content-wrapper">

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Ürünler /</span> Ürünler Ekle</h4>

        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <form asp-controller="Product" asp-action="Add" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="card-body">



                            <div class="form-group">
                                <label asp-for="Name" id="defaultFormControlInput" class="form-label">İsim</label>
                                <input asp-for="Name" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Ürünün İsmini Giriniz"
                                       aria-describedby="defaultFormControlHelp" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Price" id="defaultFormControlInput" class="form-label">Fiyat</label>
                                <input asp-for="Price" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Ürünün Fiyatını Giriniz"
                                       aria-describedby="defaultFormControlHelp" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Unit" id="defaultFormControlInput" class="form-label">Birim</label>
                                <input asp-for="Unit" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Ürünün Birimini Giriniz"
                                       aria-describedby="defaultFormControlHelp" />
                                <span asp-validation-for="Unit" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

</div>