@model SensorDataUpdateDto

<div class="content-wrapper">

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Sensörler /</span> Sensör Data Güncelle</h4>

        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <form asp-controller="SensorData" asp-action="Update" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="card-body">
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label asp-for="SensorId">Sensörü</label>
                                <select id="fieldList" class="form-control" asp-for="SensorId" asp-items="@(new SelectList(Model.Sensors,"Id","Name"))"></select>
                                <span asp-validation-for="SensorId" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label asp-for="Value" id="defaultFormControlInput" class="form-label">Değer</label>
                                <input asp-for="Value" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Verinin değerini giriniz."
                                       aria-describedby="defaultFormControlHelp" />
                                <span asp-validation-for="Value" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Unit" id="defaultFormControlInput" class="form-label">Birimi</label>
                                <input asp-for="Unit" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Verinin Birimini Giriniz"
                                       aria-describedby="defaultFormControlHelp" />
                                <span asp-validation-for="Unit" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

</div>