@model List<SensorDataDto>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"></span>Sensör Verisi Yönetimi</h4>
    <div class="card">

        <div class="table-responsive text-nowrap m-3">

            <table class="table table-bordered" id="sensorDatasTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <td>Sensörü</td>
                        <td>Sensörün Tipi</td>
                        <td>Değeri</td>
                        <td>Birimi</td>
                        <td>Zaman Damgası</td>
                        @{
                            if (User.IsInRole($"{RoleConsts.Superadmin}"))
                            {
                                <th>İşlemler</th>
                            }
                        }
                    </tr>
                </thead>
                <tfoot>
                </tfoot>

                <tbody class="table-border-bottom-0">
                    @foreach (var data in Model)
                    {
                        <tr name="@data.Id">
                            
                            <td>@data.Sensor.Name</td>
                            <td>@data.Sensor.Type</td>
                            <td>@data.Value</td>
                            <td>@data.Unit</td>
                            <td>@data.Timestamp </td>
                            @{
                                if (User.IsInRole($"{RoleConsts.Superadmin}"))
                                {
                                    <td>
                                        <a class="btn btn-primary btn-sm" data-id="@data.Id" asp-area="Admin" asp-controller="SensorData" asp-action="UndoDelete" asp-route-sensorDataId="@data.Id"><i class="bx bx-undo"></i></a>
                                    </td>
                                }
                            }


                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/sensorDataIndex.js" type="application/ecmascript"></script>
}


