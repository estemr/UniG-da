@model List<FacilityDto>

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light"></span>Tesis Yönetimi</h4>
    <div class="card">

        <div class="table-responsive text-nowrap m-3">
            @{
                if (!User.IsInRole($"{RoleConsts.User}"))
                {
                    <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Facility" asp-action="Add">
                        Tesis Ekle +
                    </a>
                }
            }


            <table class="table table-bordered" id="facilitiesTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <td>Tesis Adı</td>
                        <td>Tesis Lokasyonu</td>
                        @{
                            if (!User.IsInRole($"{RoleConsts.User}"))
                            {
                                <th>İşlemler</th>
                            }
                        }
                    </tr>
                </thead>
                <tfoot>
                </tfoot>

                <tbody class="table-border-bottom-0">
                    @foreach (var facility in Model)
                    {
                        <tr name="@facility.Id">
                            <td>@facility.Name</td>
                            <td>@facility.Location</td>
                            @{
                                if (!User.IsInRole($"{RoleConsts.User}"))
                                {
                                    <td>
                                        <a class="btn btn-primary btn-sm" data-id="@facility.Id" asp-area="Admin" asp-controller="Facility" asp-action="UndoDelete" asp-route-facilityId="@facility.Id"><i class="bx bx-undo"></i></a>
                                    </td>
                                }
                            }

                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>


@section Scripts {
    <script src="~/js/facilityIndex.js" type="application/ecmascript"></script>
}



