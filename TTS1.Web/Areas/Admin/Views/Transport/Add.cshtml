@model TransportAddDto

<div class="content-wrapper">

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Lojistik /</span> Taşıma Bilgisi Ekle</h4>

        <div class="row">
            <div class="col-md-12">
                <div class="card mb-4">
                    <form asp-controller="Transport" asp-action="Add" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly"></div>

                        <div class="card-body">

                            <div class="form-group">
                                <label asp-for="Name" id="defaultFormControlInput" class="form-label">Taşıma Adı (Temsili)</label>
                                <input asp-for="Name" type="text" class="form-control mb-3" id="defaultFormControlInput" placeholder="Taşıma Bilgisinin Temsili İsmini Giriniz"
                                       aria-describedby="defaultFormControlHelp" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ProductId" id="defaultFormControlInput" class="form-label">Ürün</label>
                                <select id="vehicleList" class="form-control" asp-for="ProductId" asp-items="@(new SelectList(Model.Products,"Id","Name"))"></select>
                                <span asp-validation-for="ProductId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="VehicleId" id="defaultFormControlInput" class="form-label">Sürücüsü</label>
                                <select id="vehicleList" class="form-control" asp-for="VehicleId" asp-items="@(new SelectList(Model.Vehicles,"Id","DriverName"))"></select>
                                <span asp-validation-for="VehicleId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="FieldId" id="defaultFormControlInput" class="form-label">Ürün Hangi Tarladan Çıkış Yapacak?</label>
                                <select id="fieldList" class="form-control" asp-for="FieldId" asp-items="@(new SelectList(Model.Fields,"Id","Name"))"></select>
                                <span asp-validation-for="FieldId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="FacilityId" id="defaultFormControlInput" class="form-label">Ürün Hangi Tesise Ulaşacaktır?</label>
                                <select id="facilityList" class="form-control" asp-for="FacilityId" asp-items="@(new SelectList(Model.Facilities,"Id","Name"))"></select>
                                <span asp-validation-for="FacilityId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="PackageId" id="defaultFormControlInput" class="form-label">Paket Türü</label>
                                <select id="packagesList" class="form-control" asp-for="PackageId" asp-items="@(new SelectList(Model.Packages,"Id","Type"))"></select>
                                <span asp-validation-for="PackageId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary btn-block">Kaydet</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>

</div>